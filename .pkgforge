name 'less'
org 'amylum'

licenses 'COPYING'

source(
  type: 'tar',
  url: 'http://www.greenwoodsoftware.com/less/less-487.tar.gz'
)

deps(
  ncurses: {
    version: '6.0-20170827-1',
    checksum: '3ae94c220d9a31c72ea6ba03afde6e7081c028fc039216201e7a744995e1d1c3'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-regex': 'pcre'
)

cflags
harden

build do
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  make
  install
end

test do
  # TODO: add tests
end

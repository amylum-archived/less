name 'less'
org 'amylum'

licenses 'COPYING'

source(
  type: 'tar',
  url: 'http://www.greenwoodsoftware.com/less/less-487.tar.gz'
)

deps(
  ncurses: '6.0-20170304-1'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-regex': 'pcre'
)

cflags
harden

build do
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  make
  install
end

test do
  # TODO: add tests
end

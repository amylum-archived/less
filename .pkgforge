name 'less'
org 'amylum'

licenses 'COPYING'

source(
  type: 'tar',
  url: 'http://www.greenwoodsoftware.com/less/less-487.tar.gz'
)

deps(
  ncurses: {
    version: '6.0-20170909-1',
    checksum: 'a41a96e9c416004a4c3fad43ffea1ada732d35d7a38eda9a2abb50c4dc6707fe'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-regex': 'pcre'
)

cflags
harden

build do
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  make
  install
end

test do
  # TODO: add tests
end

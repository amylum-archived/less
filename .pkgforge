name 'less'
org 'amylum'

licenses 'COPYING'

source(
  type: 'tar',
  url: 'http://www.greenwoodsoftware.com/less/less-487.tar.gz'
)

deps(
  ncurses: {
    version: '6.0-20170902-1',
    checksum: '541376efc4c59c9c9d89658822e9bc3fb932c192a967217ca01d463fc9482c0e'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-regex': 'pcre'
)

cflags
harden

build do
  configure "LDFLAGS" => "#{@forge.cflags.join(' ')}"
  make
  install
end

test do
  # TODO: add tests
end
